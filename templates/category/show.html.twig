{% extends 'base.html.twig' %}

{% block title %}Catégorie #{{ category.id }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ category.name }}</h1>
            {% for program in programs %}
                <div>
                    <h2 class="mt-0">{{ program.title }}</h2>
                    <p class="mt-0">{{ program.synopsis }}</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
{% endblock %}
