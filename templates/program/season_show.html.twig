{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ program.title }}</h1>
    <h2>Saison {{ season.number }}</h2>
    <p>{{ season.description }}</p>
    <p>Liste des épisodes :</p>
    <ul>
        {% for episode in season.episodes %}
            <li>
                <a href="{{ path("program_episode_show", { program: program.id, season: season.id, episode: episode.id }) }}">
                    Épisode {{ episode.number }}
                    : {{ episode.title|trim('.') }}</a>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path("program_show", { program: program.id }) }}">
        Retour à la série
    </a>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}

{% block title %}

{% endblock %}
